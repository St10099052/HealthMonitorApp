@model HealthMonitorApp.Models.HealthRecord

@{
    ViewData["Title"] = "View Health Record";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-header">
        <h4>Health Record Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Date Recorded</dt>
            <dd class="col-sm-9">@Model.DateRecorded.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Heart Rate</dt>
            <dd class="col-sm-9">@Model.HeartRate bpm</dd>

            <dt class="col-sm-3">Blood Pressure</dt>
            <dd class="col-sm-9">@Model.BloodPressureSystolic / @Model.BloodPressureDiastolic mmHg</dd>

            <dt class="col-sm-3">Weight</dt>
            <dd class="col-sm-9">@Model.Weight kg</dd>

          
        </dl>
    </div>
    <div class="card-footer text-muted">
        <a href="@Url.Action("Dashboard", "Health")" class="btn btn-primary">Back to Dashboard</a>
    </div>
</div>
